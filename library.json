{
    "$schema": "https://raw.githubusercontent.com/platformio/platformio-core/develop/platformio/assets/schema/library.json",
    "name": "GyverHub",
    "version": "1.0",
    "description": "ESP8266/ESP32/Arduino control panel with in-sketch GUI builder",
    "keywords": ["Arduino", "ESP32", "ESP8266", "Communication"],
    "homepage": "https://github.com/GyverLibs/GyverHub",
    "repository": {
        "type": "git",
        "url": "https://github.com/GyverLibs/GyverHub"
    },
    "authors": [
        {
            "name": "AlexGyver",
            "email": "alex@alexgyver.ru",
            "url": "https://alexgyver.ru/"
        }
    ],
    "license": "MIT",
    "frameworks": ["arduino"],
    "platforms": ["espressif32", "espressif8266", "atmelavr"],
    "headers": ["GyverHub.h"],
    "dependencies": [
        {"name": "LittleFS"},
        {
            "name": "AsyncMqttClient-esphome",
            "owner": "OttoWinter",
            "platforms": ["espressif32", "espressif8266"],
            "frameworks": ["arduino"]
        },
        {
            "name": "ESPAsyncWebServer-esphome",
            "version": "https://github.com/esphome/ESPAsyncWebServer.git",
            "platforms": ["espressif32", "espressif8266"],
            "frameworks": ["arduino"]
        },
        {
            "name": "PubSubClient",
            "owner": "knolleary",
            "platforms": ["espressif32", "espressif8266"],
            "frameworks": ["arduino"]
        },
        {
            "name": "arduinoWebSockets",
            "version": "https://github.com/Links2004/arduinoWebSockets.git",
            "platforms": ["espressif32", "espressif8266"],
